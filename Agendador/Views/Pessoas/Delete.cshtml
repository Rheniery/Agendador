@model Agendador.Models.Pessoa

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir</h1>

<h3>Você deseja realmente excluir este cadastro?</h3>
@if (ViewData["ValidaPessoa"] != null)
{
    @if (ViewData["ValidaPessoa"].ToString() == "Sucesso")
    {
        <div class="alert alert-success alert-dismissible show" role="alert">
            <strong>Sucesso!!</strong> Consulta foi agendada com sucesso.
            <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible show" role="alert">
            <strong>Falha!</strong> @ViewData["ValidaPessoa"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescNomeA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescNomeA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescTelefoneA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescTelefoneA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescCpfcnpjA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescCpfcnpjA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescEnderecoA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescEnderecoA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescEmailA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescEmailA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescTipoPessoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescTipoPessoa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IndrConvenioA)
        </dt>
        <dd class="col-sm-10">
            @(Model.IndrConvenioA == "S" ? "Sim" : "Não")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescConvenioA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescConvenioA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescNumconvenioA)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescNumconvenioA)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PessoaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Lista de Pessoas</a>
    </form>
</div>
