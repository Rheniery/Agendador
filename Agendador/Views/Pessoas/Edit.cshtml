@model Agendador.Models.Pessoa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/Pessoa/edit.js"></script>

<h1>Editar Pessoa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PessoaId" />
            <div class="form-group" style="margin-bottom: 10px;">
                @Html.Label("DescTipoPessoa", "Tipo de Pessoa*")
                <select class="custom-select" style="font-size: 14px;" asp-for="IndrTipoA">
                    <option selected="selected" value="">Selecione um Tipo</option>
                    <option value="F">Física</option>
                    <option value="J">Jurídica</option>
                </select>
                <span asp-validation-for="IndrTipoA" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescNomeA" class="control-label"></label>
                <input asp-for="DescNomeA" class="form-control" />
                <span asp-validation-for="DescNomeA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescCpfcnpjA" class="control-label"></label>
                <input asp-for="DescCpfcnpjA" class="form-control" />
                <span asp-validation-for="DescCpfcnpjA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescTelefoneA" class="control-label"></label>
                <input asp-for="DescTelefoneA" class="form-control" />
                <span asp-validation-for="DescTelefoneA" class="text-danger"></span>
            </div>
            <div id="divClinica" style="display:none;">
                <div class="form-group">
                    <label asp-for="DescEnderecoA" class="control-label"></label>
                    <input asp-for="DescEnderecoA" class="form-control" />
                    <span asp-validation-for="DescEnderecoA" class="text-danger"></span>
                </div>
            </div>
            <div id="divPaciente" style="display:none;">
                <div class="form-group">
                    <label asp-for="DescEmailA" class="control-label"></label>
                    <input asp-for="DescEmailA" class="form-control" />
                    <span asp-validation-for="DescEmailA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IndrConvenioA" class="control-label"></label>
                    <br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IndrConvenioA" id="rbConvenioSim" value="S">
                        <label class="form-check-label" for="inlineRadio1">Sim</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IndrConvenioA" id="rbConvenioNao" value="N">
                        <label class="form-check-label" for="inlineRadio2">Não</label>
                    </div>
                    <span asp-validation-for="IndrConvenioA" class="text-danger"></span>
                </div>
                <div id="divConveniado" style="display: none;">
                    <div class="form-group">
                        <label asp-for="DescConvenioA" class="control-label"></label>
                        <input asp-for="DescConvenioA" class="form-control" />
                        <span asp-validation-for="DescConvenioA" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescNumconvenioA" class="control-label"></label>
                        <input asp-for="DescNumconvenioA" class="form-control" />
                        <span asp-validation-for="DescNumconvenioA" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista de Pessoas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
